{
  "name": "Hotel",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "number",
      "required": true
    },
    "longitude": {
      "type": "number",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "numOfRates": {
      "type": "number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "rooms": {
      "type": "hasMany",
      "model": "Room",
      "foreignKey": ""
    },
    "destination": {
      "type": "belongsTo",
      "model": "Destination",
      "foreignKey": ""
    },
    "quickRoomReservations": {
      "type": "hasMany",
      "model": "QuickRoomReservation",
      "foreignKey": ""
    },
    "hotelDiscounts": {
      "type": "hasMany",
      "model": "HotelDiscount",
      "foreignKey": ""
    },
    "hPriceList": {
      "type": "hasOne",
      "model": "HPriceList",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "sysAdmin",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__create__rooms"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__destroyById__rooms"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__updateById__rooms"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__create__quickroomreservations"
    }
  ],
  "methods": {}
}
